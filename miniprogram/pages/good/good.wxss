/* pages/good/good.wxss */
.container {
  width: 750rpx;
  height: 200vh;

  background-color: white;
}

.good_show {
  width: 750rpx;
}

.under_image {
  margin: 0rpx;
  width: 750rpx;
  height: 20rpx;
  background-color: #caeeda;
}

.business {
  margin-left: 20rpx;
  margin-right: 20rpx;

  width: 100%;
  height: 200rpx;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  float: left;
}

.line {
  width: 100%;
  height: 4rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  float: left;
  border-bottom: #eee solid 4rpx;
}

.avatar {
  margin: 20rpx;

  height: 160rpx;
  width: 160rpx;
  border-radius: 80rpx;
  float: left;
}

.businesser {
  width: 70%;
  height: 200rpx;
  float: left;
}

.nickname {
  margin-left: 20rpx;
  padding-top: 35rpx;
  font-size: large;
  font-weight: bold;
}

.position {
  margin-left: 20rpx;
  padding-top: 35rpx;
  font-size: medium;
}

.right_green {
  margin-left: 700rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;

  width: 10rpx;
  height: 160rpx;
  background-color: #18B458;
}

.mid {
  float: left;
}

.green_topic {
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  background-image: url("https://636c-cloud1-3g192wyqd9d72719-1311228133.tcb.qcloud.la/imags/green_logo.png?sign=190048d49c8541908425310094be5139&t=1651474709");
  background-size: 100% 100%;

  width: 180rpx;
  height: 60rpx;

  /* padding-top: 14rpx; */
  padding-left: 30rpx;
  color: yellow;

  display: flex;
  align-items: center;
  justify-content: center;
}

.good_top {
  width: 750rpx;
  height: 80rpx;
}

.good_name {
  margin-left: 25rpx;
  margin-bottom: 20rpx;
  font-size: large;
  font-weight: bolder;
  float: left;
}

.good_price {
  margin-left: 25rpx;
  margin-right: 40rpx;
  font-size: x-large;
  color: red;
  float: right;
}

.good_detail {
  width: 700rpx;
  margin-left: 25rpx;
  margin-bottom: 30rpx;
  overflow-wrap: break-word
}

.good_position {
  margin-left: 25rpx;
  margin-bottom: 30rpx;

  font-size: small;
}

.good_time {
  margin-left: 25rpx;
  margin-bottom: 30rpx;

  font-size: small;
}

.myicon {
  width: 40rpx;
}

.buttons {
  width: 500rpx;
  float: left;
}

.telephone {
  margin-left: 50rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fffd34;

  width: 200rpx;
  height: 80%;

  display: flex;
  justify-content: center;
  align-items: center;
  float: left;

  color: black;
  border-radius: 30rpx 0 0 30rpx;
}

.wechat {
  margin-left: 250rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #18B458;

  width: 200rpx;
  height: 80%;

  display: flex;
  justify-content: center;
  align-items: center;

  color: white;
  border-radius: 0 30rpx 30rpx 0;
}

.slide-image {
  height: 100%;
  width: 100%;
}

.slide {
  height: 480rpx;
}

.sharebtn {
  height: 100rpx;
}